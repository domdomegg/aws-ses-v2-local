{
  "name": "aws-ses-v2-local",
  "version": "1.0.1",
  "description": "A local version of Amazon Simple Email Service (AWS SES) supporting the V2 API",
  "license": "MIT",
  "author": "Adam Jones (domdomegg)",
  "repository": {
    "type": "git",
    "url": "https://github.com/domdomegg/aws-ses-v2-local.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "aws-ses-v2-local": "dist/cli.js"
  },
  "files": [
    "dist",
    "screenshot.png"
  ],
  "scripts": {
    "start": "npm run build && node dist/cli.js",
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src test --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src test --ext .js,.jsx,.ts,.tsx --fix",
    "clean": "rm -rf dist",
    "build": "tsc && cp src/index.html dist/index.html",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/json-schema": "^7.0.9",
    "@types/mailparser": "^3.4.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {
    "ajv": "^8.6.3",
    "express": "^4.17.1",
    "mailparser": "^3.4.0"
  }
}